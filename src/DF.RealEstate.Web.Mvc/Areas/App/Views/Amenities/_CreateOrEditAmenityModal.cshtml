@using DF.RealEstate.Web.Areas.App.Models.Amenities;
@using DF.RealEstate.Web.Areas.App.Models.Common.Modals;
@using DF.RealEstate.Homes.Amenities.Dto;
@using DF.RealEstate.Web.Extentions;

@model GetForEditAmenityViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new
    ModalHeaderViewModel(@Model.IsEditMode ? L("Edit") : L("CreateNew")))

<div class="modal-body">
    <form name="informationsForm" role="form" novalidate class="form-validation">
        @if (Model.IsEditMode)
        {
            <input type="hidden" name="Id" value="@Model.Id" />
        }
        <div class="col-md-12">
            <div class="form-group">
                <label for="AdminName">@L("AdminName")</label>
                <input id="AdminName" type="text" name="AdminName" class="form-control" value="@Model.AdminName">
            </div>
        </div>

        @(Html.LocalizedEditor<GetForEditAmenityViewModel, AmenityTranslationDto>("cat-info-localized",
            @<div class="row clearfix">
                         <div class="col-sm-12">
                             <div class="form-group form-float">
                                   <div class="form-line">
                                      <label asp-for="@Model.Translations[item].Name" class="form-label"></label>
                                      <input name="Translations[@item][Name]" asp-for="@Model.Translations[item].Name" class="form-control" />
                                      <span asp-validation-for="@Model.Translations[item].Name"></span>
                                   </div>
                             </div>

                                 <div class="form-group form-float">
                                    <div class="form-line">
                                        <label asp-for="@Model.Translations[item].Description" class="form-label"></label>
                                        <textarea name="Translations[@item][Description]" asp-for="@Model.Translations[item].Description" class="form-control">
                                                        @Html.Raw(Model.Translations[item].Description)
                                        </textarea>
                                        <span asp-validation-for="@Model.Translations[item].Description"></span>
                                    </div>
                                </div>
                         </div>
                         <input type="hidden" name="Translations[@item][Language]" asp-for="@Model.Translations[item].Language" />
             </div>))
    </form>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")